  co: 'ðŸ‡¨ðŸ‡´',
  us: 'ðŸ‡ºðŸ‡¸',
  es: 'ðŸ‡ªðŸ‡¸',
  br: 'ðŸ‡§ðŸ‡·',
};

// Country accent colors
const countryColors: Record<string, { bg: string; border: string; text: string }> = {
  uk: { bg: 'from-blue-500/5 to-red-500/5', border: 'hover:border-blue-400/50', text: 'text-blue-500' },
