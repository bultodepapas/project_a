---
/**
 * Resume Page (Recruiter Mode)
 * ATS-friendly, scannable resume view
 */

import Page from '@/layouts/Page.astro';
import { supportedLangs, type Lang, isValidLang } from '@/i18n/config';
import { t } from '@/i18n';
import siteData from '@/data/site.json';
import experienceData from '@/data/experience.json';
import educationData from '@/data/education.json';
import skillsData from '@/data/skills.json';
import languagesData from '@/data/languages.json';
import awardsData from '@/data/awards.json';

// Generate static paths for each language
export function getStaticPaths() {
  return supportedLangs.map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params;

// Validate language
if (!isValidLang(lang)) {
  return Astro.redirect('/en/resume');
}

const typedLang = lang as Lang;

const pageTitle = `${t(typedLang, 'resume.title')} | ${siteData.name}`;
const pageDescription = t(typedLang, 'site.description');

const roles = experienceData.roles;
const educationItems = educationData.items;
const capabilities = skillsData.capabilities;
const languageItems = languagesData.items;
const awards = awardsData.items;
---

<Page
  title={pageTitle}
  description={pageDescription}
  lang={typedLang}
  ogType="profile"
>
  <div class="section">
    <div class="container max-w-4xl">
      <!-- Header -->
      <header class="mb-12 pb-8 border-b border-border">
        <h1 class="text-3xl md:text-4xl font-bold text-foreground">{siteData.name}</h1>
        <p class="text-xl text-accent mt-2">{siteData.jobTitle[typedLang]}</p>
        <p class="text-sm text-muted mt-2 max-w-2xl">
          {siteData.tagline[typedLang]}
        </p>

        <div class="flex flex-wrap items-center gap-4 mt-4 text-sm text-muted">
          <span>{siteData.location[typedLang]}</span>
          <a href={`mailto:${siteData.email}`} class="hover:text-accent">{siteData.email}</a>
          <a
            href={siteData.linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-accent"
          >
            LinkedIn
          </a>
        </div>

        <!-- Download PDF -->
        <div class="mt-6">
          <a
            href={siteData.pdf[typedLang]}
            download
            class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-md bg-primary text-white hover:bg-primary-light transition-colors"
          >
            {t(typedLang, 'resume.downloadPdf')}
          </a>
        </div>
      </header>

      <!-- Summary -->
      <section class="mb-10">
        <h2 class="text-lg font-semibold text-foreground mb-4 uppercase tracking-wider">
          {t(typedLang, 'resume.summary')}
        </h2>
        <p class="text-muted leading-relaxed">
          {typedLang === 'es'
            ? 'Especialista en datos y evaluacion de impacto con 8+ anos en monitoreo, evaluacion y analisis de datos para programas internacionales de sostenibilidad y clima. Experta en diseno de frameworks para medicion de impacto, gestion basada en resultados y reportes basados en evidencia. Experiencia en entornos multiculturales y multi-regionales apoyando los ODS 8, 9 y 13.'
            : 'Data and impact assessment specialist with 8+ years in monitoring, evaluation, and data analysis for international sustainability and climate programmes. Expert in designing frameworks for impact measurement, results-based management, and evidence-based reporting. Experienced in multicultural, cross-regional environments supporting UN SDGs 8, 9, and 13.'}
        </p>
      </section>

      <!-- Key Strengths -->
      <section class="mb-10">
        <h2 class="text-lg font-semibold text-foreground mb-4 uppercase tracking-wider">
          {t(typedLang, 'resume.strengths')}
        </h2>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-muted">
          {capabilities.slice(0, 5).map((capability) => (
            <li class="flex items-start gap-2">
              <span class="text-accent">+</span>
              <span>{capability.name[typedLang]}</span>
            </li>
          ))}
        </ul>
      </section>

      <!-- Experience -->
      <section class="mb-10">
        <h2 class="text-lg font-semibold text-foreground mb-6 uppercase tracking-wider">
          {t(typedLang, 'resume.experience')}
        </h2>

        <div class="space-y-8">
          {roles.map((role) => (
            <div class="rounded-xl border border-border p-6">
              <div class="flex flex-wrap justify-between items-start gap-2">
                <div>
                  <h3 class="font-semibold text-foreground">{role.title[typedLang]}</h3>
                  <p class="text-accent">{role.org}</p>
                </div>
                <span class="text-sm text-muted">
                  {role.period.replace('Present', t(typedLang, 'timeline.present'))}
                </span>
              </div>
              <ul class="mt-3 space-y-1 text-sm text-muted">
                {role.bullets[typedLang].map((bullet) => (
                  <li>- {bullet}</li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>

      <!-- Education -->
      <section class="mb-10">
        <h2 class="text-lg font-semibold text-foreground mb-4 uppercase tracking-wider">
          {t(typedLang, 'resume.education')}
        </h2>

        <div class="space-y-4">
          {educationItems.map((item) => (
            <div class="flex flex-wrap justify-between items-start gap-2">
              <div>
                <p class="font-medium text-foreground">{item.degree[typedLang]}</p>
                <p class="text-sm text-muted">{item.org}, {item.location}</p>
              </div>
              <span class:list={['text-sm', item.status === 'inProgress' ? 'text-accent' : 'text-muted']}>
                {item.status === 'inProgress' ? t(typedLang, 'education.inProgress') : item.year}
                {item.status === 'inProgress' ? ` - ${item.year}` : ''}
              </span>
            </div>
          ))}
        </div>
      </section>

      <!-- Skills -->
      <section class="mb-10">
        <h2 class="text-lg font-semibold text-foreground mb-4 uppercase tracking-wider">
          {t(typedLang, 'resume.skills')}
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
          {capabilities.map((capability) => (
            <div class="p-4 rounded-lg border border-border bg-background-alt">
              <p class="font-medium text-foreground mb-2">{capability.name[typedLang]}</p>
              <p class="text-muted">{capability.tools.join(', ')}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Languages -->
      <section class="mb-10">
        <h2 class="text-lg font-semibold text-foreground mb-4 uppercase tracking-wider">
          {t(typedLang, 'resume.languages')}
        </h2>

        <div class="flex flex-wrap gap-6 text-sm">
          {languageItems.map((item) => (
            <div>
              <span class="font-medium text-foreground">{item.name}</span>
              <span class="text-muted"> - {t(typedLang, `languages.levels.${item.level}`)}</span>
            </div>
          ))}
        </div>
      </section>

      <!-- Recognition -->
      <section class="mb-10">
        <h2 class="text-lg font-semibold text-foreground mb-4 uppercase tracking-wider">
          {t(typedLang, 'resume.awards')}
        </h2>

        <ul class="space-y-2 text-sm text-muted">
          {awards.map((award) => (
            <li>- {award.description[typedLang]} ({award.year})</li>
          ))}
        </ul>
      </section>

      <!-- Featured Work -->
      <section>
        <h2 class="text-lg font-semibold text-foreground mb-4 uppercase tracking-wider">
          {t(typedLang, 'resume.topCases')}
        </h2>

        <div class="space-y-3">
          <a href={`/${typedLang}/case-studies/audience-framework`} class="flex items-center justify-between p-3 rounded-lg border border-border hover:border-accent transition-colors group">
            <span class="font-medium text-foreground group-hover:text-accent transition-colors">
              {typedLang === 'es' ? 'Framework de Inteligencia de Audiencias' : 'Audience Intelligence Framework'}
            </span>
            <span class="text-sm text-accent">{t(typedLang, 'resume.viewCase')} -></span>
          </a>
          <a href={`/${typedLang}/case-studies/benchmark-system`} class="flex items-center justify-between p-3 rounded-lg border border-border hover:border-accent transition-colors group">
            <span class="font-medium text-foreground group-hover:text-accent transition-colors">
              {typedLang === 'es' ? 'Sistema de Benchmark de Desempeno' : 'Performance Benchmark System'}
            </span>
            <span class="text-sm text-accent">{t(typedLang, 'resume.viewCase')} -></span>
          </a>
          <a href={`/${typedLang}/case-studies/narrative-tracking`} class="flex items-center justify-between p-3 rounded-lg border border-border hover:border-accent transition-colors group">
            <span class="font-medium text-foreground group-hover:text-accent transition-colors">
              {typedLang === 'es' ? 'Sistema de Seguimiento Narrativo' : 'Narrative Tracking System'}
            </span>
            <span class="text-sm text-accent">{t(typedLang, 'resume.viewCase')} -></span>
          </a>
        </div>
      </section>
    </div>
  </div>
</Page>
