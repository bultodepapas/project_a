---
import { t } from '@/i18n';
import type { Lang } from '@/i18n/config';

interface Props {
  lang: Lang;
  articleEntry: any;
}

const { lang, articleEntry } = Astro.props;
const data = articleEntry.data;

// Category colors mapping
const categoryColors: Record<string, string> = {
  'ai-marketing': 'text-emerald-500 bg-emerald-500/10',
  'strategy': 'text-blue-500 bg-blue-500/10',
  'industry-trends': 'text-amber-500 bg-amber-500/10',
  'personal-growth': 'text-purple-500 bg-purple-500/10',
};

const categoryColor = categoryColors[data.category] || 'text-accent bg-accent/10';

// Format date
const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  return date.toLocaleDateString(lang, {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};
---

<a
  href={`/${lang}/perspectives/${data.articleSlug}`}
  class="article-card group p-6 rounded-xl bg-surface border border-border hover:border-accent hover:shadow-lg transition-all flex flex-col h-full reveal-element opacity-0 translate-y-4"
  data-category={data.category}
>
  <div class="mb-auto">
    <div class="flex items-center justify-between mb-3">
      <span class={`text-xs font-semibold uppercase tracking-wider px-2 py-1 rounded ${categoryColor}`}>
        {t(lang, `perspectives.index.filters.${data.category}`)}
      </span>
      {data.featured && (
        <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium rounded bg-accent/10 text-accent">
          Featured
        </span>
      )}
    </div>

    <h3 class="text-xl font-semibold text-foreground mb-2 group-hover:text-accent transition-colors line-clamp-2">
      {data.title}
    </h3>

    <p class="text-sm text-muted mb-4 line-clamp-3">
      {data.excerpt}
    </p>
  </div>

  <div class="pt-4 border-t border-border/50 mt-4">
    <div class="flex items-center justify-between text-xs text-muted">
      <span>{formatDate(data.publishDate)}</span>
      <span>{data.readTime}</span>
    </div>
  </div>
</a>
