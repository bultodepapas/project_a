---
/**
 * CaseMetricsGrid - Impact metrics visualization
 */
interface Props {
  impacts: string[];
  theme: string;
}

const { impacts, theme } = Astro.props;

const themeColors: Record<string, string> = {
  audience: '#6ee7b7',
  benchmark: '#60a5fa',
  narrative: '#f472b6',
  capacity: '#fbbf24'
};

const color = themeColors[theme] || themeColors.audience;
---

<div class="metrics-grid" style={`--metric-color: ${color};`}>
  {impacts.map((impact: string, i: number) => (
    <div class="metric-card" style={`animation-delay: ${i * 150}ms;`}>
      <div class="metric-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
        </svg>
      </div>
      <div class="metric-content">
        <p class="metric-text">{impact}</p>
      </div>
      <div class="metric-glow"></div>
    </div>
  ))}
</div>

<style>
  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    margin: 32px 0;
  }

  .metric-card {
    position: relative;
    padding: 24px;
    background: var(--color-background-alt);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    opacity: 0;
    transform: translateY(20px);
    animation: card-reveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .metric-card:hover {
    transform: translateY(-4px);
    border-color: var(--metric-color);
    box-shadow: 0 8px 30px -8px var(--metric-color);
  }

  .metric-card:hover .metric-glow {
    opacity: 0.15;
  }

  .metric-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--metric-color);
    color: var(--color-background);
    border-radius: 12px;
    margin-bottom: 16px;
    opacity: 0.9;
  }

  .metric-content {
    position: relative;
    z-index: 2;
  }

  .metric-text {
    font-size: 15px;
    line-height: 1.6;
    color: var(--color-foreground);
    font-weight: 500;
    margin: 0;
  }

  .metric-glow {
    position: absolute;
    inset: -100px;
    background: radial-gradient(circle at center, var(--metric-color) 0%, transparent 70%);
    opacity: 0;
    filter: blur(40px);
    transition: opacity 0.4s ease;
    z-index: 0;
  }

  @keyframes card-reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .metric-card {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }

  @media (max-width: 768px) {
    .metrics-grid {
      grid-template-columns: 1fr;
      gap: 16px;
    }
  }
</style>

<script>
  function initMetrics() {
    const cards = document.querySelectorAll('.metric-card');
    
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('visible');
          }
        });
      },
      { threshold: 0.1, rootMargin: '0px 0px -100px 0px' }
    );

    cards.forEach((card) => observer.observe(card));
  }

  if (typeof document !== 'undefined') {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMetrics);
    } else {
      initMetrics();
    }
    document.addEventListener('astro:page-load', initMetrics);
  }
</script>
