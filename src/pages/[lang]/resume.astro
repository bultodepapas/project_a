---
/**
 * Resume Page (Recruiter Mode)
 * ATS-friendly, scannable resume view
 */

import Page from '@/layouts/Page.astro';
import { getLangOrRedirect, getLangStaticPaths } from '@/lib/i18n-routing';
import { t } from '@/i18n';
import ResumeHeader from '@/components/resume/ResumeHeader.astro';
import ResumeSection from '@/components/resume/ResumeSection.astro';
import siteData from '@/data/site.json';
import experienceData from '@/data/experience.json';
import educationData from '@/data/education.json';
import skillsData from '@/data/skills.json';
import languagesData from '@/data/languages.json';
import awardsData from '@/data/awards.json';
import homeData from '@/data/home.json';

// Generate static paths for each language
export function getStaticPaths() {
  return getLangStaticPaths();
}

const { lang } = Astro.params;

const { lang: typedLang, redirect } = getLangOrRedirect(lang, '/en/resume');
if (redirect) {
  return Astro.redirect(redirect);
}

const pageTitle = `${t(typedLang, 'resume.title')} | ${siteData.name}`;
const pageDescription = t(typedLang, 'site.description');

const roles = experienceData.roles;
const educationItems = educationData.items;
const capabilities = skillsData.capabilities;
const languageItems = languagesData.items;
const awards = awardsData.items;

// Helper to get case title
const getCaseTitle = (slug: string) => {
  const card = homeData.systems.cards.find((c) => c.slug === slug);
  return card ? card.title[typedLang] : slug;
};
---

<Page
  title={pageTitle}
  description={pageDescription}
  lang={typedLang}
  ogType="profile"
>
  <div class="section">
    <div class="container max-w-4xl">
      <ResumeHeader 
        lang={typedLang}
        name={siteData.name}
        jobTitle={siteData.jobTitle[typedLang]}
        tagline={siteData.tagline[typedLang]}
        location={siteData.location[typedLang]}
        email={siteData.email}
        linkedin={siteData.linkedin}
        pdfUrl={siteData.pdf[typedLang]}
      />

      <!-- Summary -->
      <ResumeSection title={t(typedLang, 'resume.summary')}>
        <p class="text-muted leading-relaxed">
          {t(typedLang, 'resume.summaryText')}
        </p>
      </ResumeSection>

      <!-- Key Strengths -->
      <ResumeSection title={t(typedLang, 'resume.strengths')}>
        <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-muted">
          {capabilities.slice(0, 5).map((capability) => (
            <li class="flex items-start gap-2">
              <span class="text-accent mt-1.5 w-1.5 h-1.5 rounded-full bg-accent flex-shrink-0"></span>
              <span>{capability.name[typedLang]}</span>
            </li>
          ))}
        </ul>
      </ResumeSection>

      <!-- Experience -->
      <ResumeSection title={t(typedLang, 'resume.experience')}>
        <div class="space-y-8">
          {roles.map((role) => (
            <div class="rounded-xl border border-border p-6 bg-surface/50 hover:bg-surface transition-colors">
              <div class="flex flex-wrap justify-between items-start gap-2 mb-3">
                <div>
                  <h3 class="font-semibold text-foreground text-lg">{role.title[typedLang]}</h3>
                  <p class="text-accent font-medium">{role.org}</p>
                </div>
                <span class="text-sm text-muted bg-background-alt px-3 py-1 rounded-full border border-border">
                  {role.period.replace('Present', t(typedLang, 'timeline.present'))}
                </span>
              </div>
              <ul class="space-y-2 text-sm text-muted">
                {role.bullets[typedLang].map((bullet) => (
                  <li class="flex items-start gap-2">
                    <span class="text-muted mt-1.5 w-1 h-1 rounded-full bg-muted flex-shrink-0"></span>
                    <span>{bullet}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </ResumeSection>

      <!-- Education -->
      <ResumeSection title={t(typedLang, 'resume.education')}>
        <div class="space-y-4">
          {educationItems.map((item) => (
            <div class="flex flex-wrap justify-between items-start gap-2 p-4 rounded-lg border border-border bg-background-alt/30">
              <div>
                <p class="font-semibold text-foreground">{item.degree[typedLang]}</p>
                <p class="text-sm text-muted">{item.org}, {item.location}</p>
              </div>
              <span class:list={['text-sm px-2 py-1 rounded', item.status === 'inProgress' ? 'bg-accent/10 text-accent font-medium' : 'text-muted']}>
                {item.status === 'inProgress' ? t(typedLang, 'education.inProgress') : item.year}
                {item.status === 'inProgress' ? ` - ${item.year}` : ''}
              </span>
            </div>
          ))}
        </div>
      </ResumeSection>

      <!-- Skills -->
      <ResumeSection title={t(typedLang, 'resume.skills')}>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
          {capabilities.map((capability) => (
            <div class="p-4 rounded-lg border border-border bg-background-alt/50">
              <p class="font-medium text-foreground mb-2">{capability.name[typedLang]}</p>
              <p class="text-muted text-xs leading-relaxed">{capability.tools.join(', ')}</p>
            </div>
          ))}
        </div>
      </ResumeSection>

      <!-- Languages -->
      <ResumeSection title={t(typedLang, 'resume.languages')}>
        <div class="flex flex-wrap gap-4 text-sm">
          {languageItems.map((item) => (
            <div class="px-4 py-2 rounded-full border border-border bg-background-alt/50">
              <span class="font-medium text-foreground">{item.name}</span>
              <span class="text-muted mx-1">-</span>
              <span class="text-muted">{t(typedLang, `languages.levels.${item.level}`)}</span>
            </div>
          ))}
        </div>
      </ResumeSection>

      <!-- Recognition -->
      <ResumeSection title={t(typedLang, 'resume.awards')}>
        <ul class="space-y-3 text-sm text-muted">
          {awards.map((award) => (
            <li class="flex items-start gap-2">
              <span class="text-accent font-medium min-w-[4ch]">{award.year}</span>
              <span>{award.description[typedLang]}</span>
            </li>
          ))}
        </ul>
      </ResumeSection>

      <!-- Featured Work -->
      <ResumeSection title={t(typedLang, 'resume.topCases')}>
        <div class="space-y-3">
          <a href={`/${typedLang}/case-studies/audience-framework`} class="flex items-center justify-between p-4 rounded-lg border border-border hover:border-accent hover:bg-surface transition-all group">
            <span class="font-medium text-foreground group-hover:text-accent transition-colors">
              {getCaseTitle('audience-framework')}
            </span>
            <span class="text-sm text-accent group-hover:translate-x-1 transition-transform">-></span>
          </a>
          <a href={`/${typedLang}/case-studies/benchmark-system`} class="flex items-center justify-between p-4 rounded-lg border border-border hover:border-accent hover:bg-surface transition-all group">
            <span class="font-medium text-foreground group-hover:text-accent transition-colors">
              {getCaseTitle('benchmark-system')}
            </span>
            <span class="text-sm text-accent group-hover:translate-x-1 transition-transform">-></span>
          </a>
          <a href={`/${typedLang}/case-studies/narrative-tracking`} class="flex items-center justify-between p-4 rounded-lg border border-border hover:border-accent hover:bg-surface transition-all group">
            <span class="font-medium text-foreground group-hover:text-accent transition-colors">
              {getCaseTitle('narrative-tracking')}
            </span>
            <span class="text-sm text-accent group-hover:translate-x-1 transition-transform">-></span>
          </a>
        </div>
      </ResumeSection>
    </div>
  </div>
</Page>
