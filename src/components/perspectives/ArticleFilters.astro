---
import { t } from '@/i18n';
import type { Lang } from '@/i18n/config';

interface Props {
  lang: Lang;
  categories: string[];
}

const { lang, categories } = Astro.props;
---

<div class="article-filters mb-8">
  <div class="flex flex-col gap-4">
    <!-- Category Filters -->
    <div class="filter-group">
      <div class="flex flex-wrap gap-2" id="category-filters">
        <button
          class="filter-btn px-4 py-2 text-sm font-medium rounded-full border border-primary bg-primary text-white transition-all hover:opacity-90 active"
          data-filter="all"
          data-group="category"
        >
          {t(lang, 'perspectives.index.filters.all')}
        </button>
        {categories.map((category) => (
          <button
            class="filter-btn px-4 py-2 text-sm font-medium rounded-full border border-border text-muted hover:border-accent hover:text-accent transition-all"
            data-filter={category}
            data-group="category"
          >
            {t(lang, `perspectives.index.filters.${category}`)}
          </button>
        ))}
      </div>
    </div>
  </div>
</div>

<script>
  function initArticleFilters() {
    const filterBtns = document.querySelectorAll('.article-filters .filter-btn');
    const cards = document.querySelectorAll('.article-card');
    const noResultsMsg = document.getElementById('no-results-message');

    let activeCategory = 'all';

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const group = btn.getAttribute('data-group');
        const filter = btn.getAttribute('data-filter') || 'all';

        // Update UI
        document.querySelectorAll(`.article-filters .filter-btn[data-group="${group}"]`).forEach(b => {
          b.classList.remove('bg-primary', 'text-white', 'border-primary');
          b.classList.add('bg-transparent', 'text-muted', 'border-border');
        });
        btn.classList.remove('bg-transparent', 'text-muted', 'border-border');
        btn.classList.add('bg-primary', 'text-white', 'border-primary');

        // Apply filter
        activeCategory = filter;
        filterCards();
      });
    });

    function filterCards() {
      let visibleCount = 0;

      cards.forEach(card => {
        const cardCategory = card.getAttribute('data-category');
        const isVisible = activeCategory === 'all' || cardCategory === activeCategory;

        if (isVisible) {
          (card as HTMLElement).style.display = 'flex';
          setTimeout(() => {
            card.classList.remove('opacity-0', 'translate-y-4');
            card.classList.add('opacity-100', 'translate-y-0');
          }, 50);
          visibleCount++;
        } else {
          (card as HTMLElement).style.display = 'none';
          card.classList.add('opacity-0', 'translate-y-4');
          card.classList.remove('opacity-100', 'translate-y-0');
        }
      });

      if (noResultsMsg) {
        noResultsMsg.style.display = visibleCount === 0 ? 'block' : 'none';
      }
    }
  }

  // Initialize
  initArticleFilters();
  document.addEventListener('astro:page-load', initArticleFilters);
</script>

<style>
  :root.dark .article-filters .filter-btn.bg-primary {
    background: transparent;
    color: var(--color-accent-light);
    border-color: var(--color-accent);
  }

  :root.dark .article-filters .filter-btn.bg-primary:hover {
    background: rgba(45, 212, 191, 0.12);
  }
</style>
