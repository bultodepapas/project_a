---

<section class="section bg-background-alt overflow-hidden" id="education">
  <div class="container">
    <!-- Header with decorative element -->
    <div class="flex items-center gap-4 mb-16 reveal-element opacity-0 translate-y-4 transition-all">
      <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-accent/20 to-accent/5 flex items-center justify-center">
        <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 14l9-5-9-5-9 5 9 5z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
        </svg>
      </div>
      <div>
        <h2 class="text-3xl md:text-4xl font-bold text-foreground">
          {t(lang, 'education.title')}
        </h2>
        <p class="text-muted text-sm mt-1">Academic journey across three countries</p>
      </div>
    </div>

    <!-- Timeline Education Cards -->
    <div class="relative">
      <!-- Vertical timeline line (desktop) -->
      <div class="hidden md:block absolute left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-accent/50 via-border to-transparent transform -translate-x-1/2"></div>

      <div class="space-y-8 md:space-y-0">
        {items.map((item, index) => {
          const isLeft = index % 2 === 0;
          const colors = countryColors[item.country || 'uk'] || countryColors.uk;
          const flag = countryFlags[item.country || 'uk'] || '';

          return (
            <div
              class={`relative md:flex md:items-center ${isLeft ? 'md:flex-row' : 'md:flex-row-reverse'} reveal-element opacity-0 translate-y-4`}
              style={`transition-delay: ${index * 150}ms`}
            >
              {/* Timeline dot */}
              <div class="hidden md:flex absolute left-1/2 transform -translate-x-1/2 z-10">
                <div class={`w-4 h-4 rounded-full border-4 border-background-alt ${item.status === 'inProgress' ? 'bg-accent animate-pulse' : 'bg-border'}`}></div>
              </div>

              {/* Card container */}
              <div class={`md:w-1/2 ${isLeft ? 'md:pr-12 md:text-right' : 'md:pl-12'}`}>
                <div
                  class={`education-card group relative p-6 rounded-2xl bg-gradient-to-br ${colors.bg} border border-border ${colors.border} transition-all duration-300 hover:shadow-xl hover:shadow-accent/5 hover:-translate-y-1`}
                >
                  {/* Decorative corner accent */}
                  <div class={`absolute ${isLeft ? 'right-0' : 'left-0'} top-0 w-20 h-20 overflow-hidden rounded-tl-2xl`}>
                    <div class={`absolute ${isLeft ? '-right-10' : '-left-10'} -top-10 w-20 h-20 bg-accent/5 rounded-full`}></div>
                  </div>

                  {/* Status badge for in-progress */}
                  {item.status === 'inProgress' && (
                    <div class={`flex ${isLeft ? 'md:justify-end' : 'justify-start'} mb-3`}>
                      <span class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-semibold rounded-full bg-accent/10 text-accent border border-accent/20">
                        <span class="relative flex h-2 w-2">
                          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent opacity-75"></span>
                          <span class="relative inline-flex rounded-full h-2 w-2 bg-accent"></span>
                        </span>
                        {t(lang, 'education.inProgress')}
                      </span>
                    </div>
                  )}

                  {/* Year badge */}
                  <div class={`flex ${isLeft ? 'md:justify-end' : 'justify-start'} mb-4`}>
                    <span class={`inline-flex items-center gap-2 px-3 py-1 text-sm font-medium rounded-lg bg-background ${colors.text}`}>
                      <span class="text-lg">{flag}</span>
                      <span>{item.year}</span>
                    </span>
                  </div>

                  {/* Degree title */}
                  <h3 class={`text-xl font-bold text-foreground mb-1 group-hover:text-accent transition-colors ${isLeft ? 'md:text-right' : ''}`}>
                    {getStr(item.degree)}
                  </h3>

                  {/* Field of study */}
                  {item.field && (
                    <p class={`text-sm text-accent/80 font-medium mb-3 ${isLeft ? 'md:text-right' : ''}`}>
                      {getStr(item.field)}
                    </p>
                  )}

                  {/* Institution */}
                  <div class={`flex items-center gap-2 text-muted mb-2 ${isLeft ? 'md:justify-end' : ''}`}>
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <span class="font-medium">{item.org}</span>
                  </div>

                  {/* Location */}
                  <div class={`flex items-center gap-2 text-sm text-muted mb-4 ${isLeft ? 'md:justify-end' : ''}`}>
                    <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    <span>{item.location}</span>
                  </div>

                  {/* Highlights / Key areas */}
                  {item.highlights && (
                    <div class={`flex flex-wrap gap-2 pt-4 border-t border-border/50 ${isLeft ? 'md:justify-end' : ''}`}>
                      {(getStr(item.highlights) as unknown as string[])?.map((highlight: string) => (
                        <span class="px-2.5 py-1 text-xs font-medium rounded-md bg-background/80 text-muted border border-border/50 group-hover:border-accent/30 group-hover:text-foreground transition-colors">
                          {highlight}
                        </span>
                      ))}
                    </div>
                  )}

                  {/* Progress bar for in-progress degree */}
                  {item.status === 'inProgress' && (
                    <div class="mt-4 pt-4 border-t border-border/50">
                      <div class="flex items-center justify-between text-xs text-muted mb-2">
                        <span>Progress</span>
                        <span>Expected 2026</span>
                      </div>
                      <div class="h-1.5 bg-border/50 rounded-full overflow-hidden">
                        <div class="education-progress h-full bg-gradient-to-r from-accent to-accent/60 rounded-full" style="width: 0%"></div>
                      </div>
                    </div>
                  )}
                </div>
              </div>

              {/* Spacer for timeline alignment */}
              <div class="hidden md:block md:w-1/2"></div>
            </div>
          );
        })}
      </div>
    </div>
  </div>
</section>

<script>
  function initEducation() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.remove('opacity-0', 'translate-y-4');
          entry.target.classList.add('opacity-100', 'translate-y-0');

          // Animate progress bar if present
          const progressBar = entry.target.querySelector('.education-progress');
          if (progressBar) {
            setTimeout(() => {
              (progressBar as HTMLElement).style.width = '35%';
            }, 300);
          }

          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '50px'
    });

    document.querySelectorAll('#education .reveal-element').forEach((el) => {
      observer.observe(el);
    });
  }

  // Initialize on load
  initEducation();

  // Re-initialize on view transitions
  document.addEventListener('astro:page-load', initEducation);
</script>

<style>
  .education-progress {
    transition: width 1.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .education-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 1px;
    background: linear-gradient(135deg, transparent 40%, rgba(45, 212, 191, 0.1) 100%);
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .education-card:hover::before {
    opacity: 1;
  }

  @media (prefers-reduced-motion: reduce) {
    .education-progress {
      transition: none;
    }

    .animate-ping {
      animation: none;
    }

    .animate-pulse {
      animation: none;
    }
  }
</style>
