---
import { t } from '@/i18n';
import type { Lang } from '@/i18n/config';

interface Props {
  lang: Lang;
  categories: string[];
}

const { lang, categories } = Astro.props;
---

<div class="article-filters mb-8">
  <div class="flex flex-col gap-4">
    <!-- Category Filters -->
    <div class="filter-group">
      <div class="flex flex-wrap gap-2" id="category-filters">
        <button
          class="filter-btn px-4 py-2 text-sm font-medium rounded-full border border-primary bg-primary text-white transition-all hover:opacity-90 active"
          data-filter="all"
          data-group="category"
        >
          {t(lang, 'perspectives.index.filters.all')}
        </button>
        {categories.map((category) => (
          <button
            class="filter-btn px-4 py-2 text-sm font-medium rounded-full border border-border text-muted hover:border-accent hover:text-accent transition-all"
            data-filter={category}
            data-group="category"
          >
            {t(lang, `perspectives.index.filters.${category}`)}
          </button>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  :root.dark .article-filters .filter-btn.bg-primary {
    background: transparent;
    color: var(--color-accent-light);
    border-color: var(--color-accent);
  }

  :root.dark .article-filters .filter-btn.bg-primary:hover {
    background: rgba(45, 212, 191, 0.12);
  }
</style>
