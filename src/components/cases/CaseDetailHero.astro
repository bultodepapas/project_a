---
/**
 * CaseDetailHero - Epic hero for case study detail pages
 * Features: theme gradient, parallax, animated metrics
 */
interface Props {
  title: string;
  theme: string;
  role: string;
  org: string;
  timeframe: string;
  regions: string[];
  lang: string;
}

const { title, theme, role, org, timeframe, regions, lang } = Astro.props;

const themeColors: Record<string, { gradient: string; accent: string }> = {
  audience: {
    gradient: 'linear-gradient(135deg, rgba(110, 231, 183, 0.2) 0%, rgba(59, 130, 246, 0.1) 100%)',
    accent: '#6ee7b7'
  },
  benchmark: {
    gradient: 'linear-gradient(135deg, rgba(96, 165, 250, 0.2) 0%, rgba(139, 92, 246, 0.1) 100%)',
    accent: '#60a5fa'
  },
  narrative: {
    gradient: 'linear-gradient(135deg, rgba(244, 114, 182, 0.2) 0%, rgba(236, 72, 153, 0.1) 100%)',
    accent: '#f472b6'
  },
  capacity: {
    gradient: 'linear-gradient(135deg, rgba(251, 191, 36, 0.2) 0%, rgba(245, 158, 11, 0.1) 100%)',
    accent: '#fbbf24'
  }
};

const themeStyle = themeColors[theme] || themeColors.audience;
---

<header class="case-detail-hero" style={`--theme-gradient: ${themeStyle.gradient}; --theme-accent: ${themeStyle.accent};`}>
  <!-- Background gradient -->
  <div class="hero-bg"></div>
  
  <!-- Animated mesh orb -->
  <div class="hero-orb"></div>

  <div class="hero-content">
    <!-- Back link -->
    <nav class="back-link">
      <a href={`/${lang}/case-studies`} class="back-button">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        <span>All Cases</span>
      </a>
    </nav>

    <!-- Theme badge -->
    <div class="theme-badge-wrapper">
      <div class="theme-badge">
        <div class="badge-dot"></div>
        <span>{theme}</span>
      </div>
    </div>

    <!-- Title -->
    <h1 class="hero-title">
      {title.split(' ').map((word: string, i: number) => (
        <span class="title-word" style={`--word-index: ${i};`}>{word}</span>
      ))}
    </h1>

    <!-- Meta info -->
    <div class="hero-meta">
      <div class="meta-item">
        <svg class="meta-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
          <circle cx="12" cy="7" r="4"/>
        </svg>
        <span class="meta-label">{role}</span>
      </div>

      <div class="meta-separator"></div>

      <div class="meta-item">
        <svg class="meta-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        <span class="meta-label">{org}</span>
      </div>

      <div class="meta-separator"></div>

      <div class="meta-item">
        <svg class="meta-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
          <line x1="16" y1="2" x2="16" y2="6"/>
          <line x1="8" y1="2" x2="8" y2="6"/>
          <line x1="3" y1="10" x2="21" y2="10"/>
        </svg>
        <span class="meta-label">{timeframe}</span>
      </div>
    </div>

    <!-- Regions -->
    <div class="regions-container">
      {regions.map((region: string, i: number) => (
        <div class="region-chip" style={`animation-delay: ${i * 100 + 600}ms;`}>
          {region}
        </div>
      ))}
    </div>
  </div>
</header>

<style>
  .case-detail-hero {
    position: relative;
    padding: 120px 0 60px;
    margin-bottom: 40px;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: var(--theme-gradient);
    opacity: 0;
    animation: fade-in 1s ease-out forwards;
  }

  .hero-orb {
    position: absolute;
    top: -100px;
    right: -100px;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, var(--theme-accent) 0%, transparent 70%);
    opacity: 0.15;
    filter: blur(80px);
    animation: orb-float 20s ease-in-out infinite;
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* Back link */
  .back-link {
    margin-bottom: 24px;
    opacity: 0;
    animation: fade-slide-down 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 600;
    color: var(--color-muted);
    background: var(--color-background-alt);
    border: 1px solid var(--color-border);
    border-radius: 20px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .back-button:hover {
    color: var(--theme-accent);
    border-color: var(--theme-accent);
    transform: translateX(-4px);
  }

  /* Theme badge */
  .theme-badge-wrapper {
    margin-bottom: 20px;
    opacity: 0;
    animation: fade-slide-up 0.6s cubic-bezier(0.16, 1, 0.3, 1) 0.3s forwards;
  }

  .theme-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: var(--theme-accent);
    color: var(--color-background);
    border-radius: 20px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-dot {
    width: 8px;
    height: 8px;
    background: var(--color-background);
    border-radius: 50%;
    animation: pulse-dot 2s ease-in-out infinite;
  }

  /* Title */
  .hero-title {
    font-size: clamp(32px, 6vw, 56px);
    font-weight: 900;
    line-height: 1.2;
    color: var(--color-foreground);
    margin-bottom: 28px;
    display: flex;
    flex-wrap: wrap;
    gap: 0.3em;
  }

  .title-word {
    opacity: 0;
    transform: translateY(20px);
    animation: word-slide-up 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    animation-delay: calc(0.4s + var(--word-index) * 0.08s);
  }

  /* Meta */
  .hero-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 16px;
    margin-bottom: 24px;
    opacity: 0;
    animation: fade-in 0.6s ease-out 0.8s forwards;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .meta-icon {
    color: var(--theme-accent);
    flex-shrink: 0;
  }

  .meta-label {
    font-size: 14px;
    color: var(--color-foreground);
    font-weight: 500;
  }

  .meta-separator {
    width: 4px;
    height: 4px;
    background: var(--color-border);
    border-radius: 50%;
  }

  /* Regions */
  .regions-container {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .region-chip {
    padding: 6px 14px;
    font-size: 12px;
    font-weight: 600;
    color: var(--color-foreground);
    background: var(--color-background-alt);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    opacity: 0;
    transform: scale(0.9);
    animation: chip-pop 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  }

  /* Animations */
  @keyframes fade-in {
    to { opacity: 1; }
  }

  @keyframes fade-slide-down {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-slide-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes word-slide-up {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes chip-pop {
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes orb-float {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-20px, 20px) scale(1.1); }
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-orb,
    .back-link,
    .theme-badge-wrapper,
    .title-word,
    .hero-meta,
    .region-chip {
      animation: none !important;
      opacity: 1;
      transform: none;
    }
  }

  @media (max-width: 768px) {
    .case-detail-hero {
      padding: 100px 0 40px;
    }

    .hero-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 12px;
    }

    .meta-separator {
      display: none;
    }
  }
</style>
