---
import { t } from '@/i18n';
import type { Lang } from '@/i18n/config';

interface Props {
  lang: Lang;
  email: string;
  location: string;
  linkedin: string;
}

const { lang, email, location, linkedin } = Astro.props;
const wormPreset = {
  segments: 15,
  loopDur: 18,
  waveDur: 3.1,
  spacing: 0.22,
  wiggleAmp: 0.18
};

const motionKeyPoints = '0;0.08;0.16;0.24;0.32;0.4;0.48;0.56;0.64;0.72;0.8;0.88;0.94;0.98;1';
const motionKeyTimes = '0;0.08;0.16;0.26;0.36;0.46;0.56;0.64;0.72;0.8;0.86;0.92;0.96;0.99;1';
const motionKeySplines = '0.2 0.05 0.5 1;0.28 0 0.7 1;0.2 0.05 0.5 1;0.28 0 0.7 1;0.2 0.05 0.5 1;0.28 0 0.7 1;0.2 0.05 0.5 1;0.28 0 0.7 1;0.2 0.05 0.5 1;0.28 0 0.7 1;0.2 0.05 0.5 1;0.28 0 0.7 1;0.2 0.05 0.5 1;0.28 0 0.7 1';

const wormSegments = Array.from({ length: wormPreset.segments }).map((_, i) => {
  const t = i / (wormPreset.segments - 1);
  const size = 2.2 - t * 0.85;
  const baseOpacity = 0.4 + (1 - t) * 0.5;
  const motionDelay = (i * wormPreset.spacing).toFixed(2);
  const waveDelay = (i * 0.12).toFixed(2);
  const wiggleDelay = (i * 0.14).toFixed(2);
  const wiggleDur = (1.6 + (i % 4) * 0.2).toFixed(2);
  const wiggleX = (i % 2 === 0 ? wormPreset.wiggleAmp : -wormPreset.wiggleAmp).toFixed(2);
  const wiggleY = (i % 3 === 0 ? wormPreset.wiggleAmp * 0.55 : -wormPreset.wiggleAmp * 0.45).toFixed(2);

  return {
    id: `seg-${i}`,
    size,
    baseOpacity,
    motionDelay: `${motionDelay}s`,
    waveDelay: `${waveDelay}s`,
    wiggleDelay: `${wiggleDelay}s`,
    wiggleDur: `${wiggleDur}s`,
    wiggleX,
    wiggleY
  };
});
---

<section class="section" id="contact">
  <div class="container">
    <div class="contact-card max-w-3xl mx-auto text-center border border-border rounded-2xl bg-background-alt p-8 md:p-12 reveal-element opacity-0 scale-95 transition-all duration-500">
      <div class="worm-border" aria-hidden="true">
        <svg viewBox="0 0 300 120" preserveAspectRatio="none">
          <defs>
            <linearGradient id="worm-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" stop-color="rgba(56, 140, 168, 0.10)" />
              <stop offset="55%" stop-color="rgba(56, 140, 168, 0.78)" />
              <stop offset="100%" stop-color="rgba(56, 140, 168, 0.16)" />
            </linearGradient>
            <radialGradient id="worm-head-gradient" cx="35%" cy="35%" r="70%">
              <stop offset="0%" stop-color="rgba(255, 255, 255, 0.95)" />
              <stop offset="55%" stop-color="rgba(56, 140, 168, 0.90)" />
              <stop offset="100%" stop-color="rgba(32, 92, 118, 0.98)" />
            </radialGradient>
            <path
              id="worm-path"
              d="M 24 6 H 276 Q 294 6 294 24 V 96 Q 294 114 276 114 H 24 Q 6 114 6 96 V 24 Q 6 6 24 6 Z"
            />
            <mask id="worm-mask">
              <rect x="0" y="0" width="300" height="120" fill="black" />
              <path
                d="M 24 6 H 276 Q 294 6 294 24 V 96 Q 294 114 276 114 H 24 Q 6 114 6 96 V 24 Q 6 6 24 6 Z"
                fill="none"
                stroke="white"
                stroke-width="14"
                stroke-linejoin="round"
                stroke-linecap="round"
              />
            </mask>
          </defs>
          <path
            d="M 24 6 H 276 Q 294 6 294 24 V 96 Q 294 114 276 114 H 24 Q 6 114 6 96 V 24 Q 6 6 24 6 Z"
            class="worm-track"
          />
          <g class="worm-body" mask="url(#worm-mask)">
            {wormSegments.map((seg, i) => (
              <circle
                r={seg.size}
                class={`worm-segment ${i === 0 ? 'worm-head' : ''}`}
                fill={i === 0 ? 'url(#worm-head-gradient)' : 'url(#worm-gradient)'}
              >
                <animateMotion
                  dur={`${wormPreset.loopDur}s`}
                  repeatCount="indefinite"
                  begin={seg.motionDelay}
                  rotate="auto"
                  calcMode="spline"
                  keyPoints={motionKeyPoints}
                  keyTimes={motionKeyTimes}
                  keySplines={motionKeySplines}
                >
                  <mpath href="#worm-path" />
                </animateMotion>
                <animateTransform
                  attributeName="transform"
                  type="translate"
                  additive="sum"
                  values={`0 0; ${seg.wiggleX} ${seg.wiggleY}; ${-seg.wiggleX} ${-seg.wiggleY}; 0 0`}
                  keyTimes="0;0.35;0.7;1"
                  dur={seg.wiggleDur}
                  begin={seg.wiggleDelay}
                  repeatCount="indefinite"
                />
                <animate
                  attributeName="r"
                  values={`${seg.size};${seg.size + 0.55};${seg.size - 0.18};${seg.size + 0.45};${seg.size}`}
                  keyTimes="0;0.25;0.5;0.75;1"
                  keySplines="0.2 0 0.6 1;0.2 0 0.6 1;0.2 0 0.6 1;0.2 0 0.6 1"
                  dur={`${wormPreset.waveDur}s`}
                  begin={seg.waveDelay}
                  repeatCount="indefinite"
                  calcMode="spline"
                />
                <animate
                  attributeName="opacity"
                  values={`${(seg.baseOpacity * 0.55).toFixed(2)};${(seg.baseOpacity * 1.05).toFixed(2)};${(seg.baseOpacity * 0.52).toFixed(2)};${(seg.baseOpacity * 1.0).toFixed(2)};${(seg.baseOpacity * 0.55).toFixed(2)}`}
                  keyTimes="0;0.25;0.5;0.75;1"
                  keySplines="0.2 0 0.6 1;0.2 0 0.6 1;0.2 0 0.6 1;0.2 0 0.6 1"
                  dur={`${wormPreset.waveDur}s`}
                  begin={seg.waveDelay}
                  repeatCount="indefinite"
                  calcMode="spline"
                />
              </circle>
            ))}
          </g>
        </svg>
      </div>
      <div class="contact-content">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
          {t(lang, 'contact.title')}
        </h2>
        <p class="text-lg text-muted mb-8">
          {t(lang, 'contact.subtitle')}
        </p>

        <div class="flex flex-wrap justify-center gap-4">
          <a
            href={`mailto:${email}`}
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-lg bg-primary text-white hover:bg-primary-light transition-colors"
          >
            {t(lang, 'contact.email')}
          </a>
          <a
            href={`/${lang}/resume`}
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-lg border border-border text-foreground hover:bg-background transition-colors"
          >
            {t(lang, 'contact.downloadPdf')}
          </a>
          <a
            href={linkedin}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium rounded-lg border border-border text-foreground hover:bg-background transition-colors"
          >
            {t(lang, 'contact.linkedin')}
          </a>
        </div>

        <div class="mt-6 text-sm text-muted">
          {email} | {location}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function initContact() {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.remove('opacity-0', 'scale-95');
          entry.target.classList.add('opacity-100', 'scale-100');
          observer.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.2,
      rootMargin: '50px'
    });

    document.querySelectorAll('#contact .reveal-element').forEach((el) => {
      observer.observe(el);
    });
  }

  // Initialize on load
  initContact();

  // Re-initialize on view transitions
  document.addEventListener('astro:page-load', initContact);
</script>

<style>
  .contact-card {
    position: relative;
  }

  .worm-border {
    position: absolute;
    inset: -10px;
    pointer-events: none;
    z-index: 0;
    opacity: 0.95;
  }

  .worm-border svg {
    width: 100%;
    height: 100%;
  }

  .worm-track {
    fill: none;
    stroke: rgba(56, 140, 168, 0.10);
    stroke-width: 1.1;
    stroke-dasharray: 10 14;
    opacity: 0.55;
  }

  .contact-content {
    position: relative;
    z-index: 1;
  }

  .worm-body {
    filter:
      drop-shadow(0 0 3px rgba(56, 140, 168, 0.22))
      drop-shadow(0 0 8px rgba(56, 140, 168, 0.12));
  }

  .worm-head {
    filter:
      drop-shadow(0 0 6px rgba(56, 140, 168, 0.45))
      drop-shadow(0 0 12px rgba(56, 140, 168, 0.14));
  }

  @media (prefers-reduced-motion: reduce) {
    .worm-border {
      display: none;
    }
  }
</style>
