---
/**
 * EnhancedCaseNav - Premium navigation between cases
 */
import { t } from '@/i18n';
import type { Lang } from '@/i18n/config';

interface Props {
  lang: Lang;
  prevCase?: { slug: string; title: string };
  nextCase?: { slug: string; title: string };
  theme: string;
}

const { lang, prevCase, nextCase, theme } = Astro.props;

const themeColors: Record<string, string> = {
  audience: '#6ee7b7',
  benchmark: '#60a5fa',
  narrative: '#f472b6',
  capacity: '#fbbf24'
};

const color = themeColors[theme] || themeColors.audience;
---

<nav class="enhanced-case-nav" style={`--nav-color: ${color};`}>
  <div class="nav-divider"></div>
  
  <div class="nav-content">
    {prevCase ? (
      <a href={`/${lang}/case-studies/${prevCase.slug}`} class="nav-link nav-prev">
        <div class="nav-arrow">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 12H5M12 19l-7-7 7-7"/>
          </svg>
        </div>
        <div class="nav-content-inner">
          <span class="nav-label">{t(lang, 'cases.detail.prevCase')}</span>
          <span class="nav-title">{prevCase.title}</span>
        </div>
        <div class="nav-glow"></div>
      </a>
    ) : (
      <div class="nav-spacer"></div>
    )}

    <div class="nav-center">
      <a href={`/${lang}/case-studies`} class="view-all-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="3" width="7" height="7"/>
          <rect x="14" y="3" width="7" height="7"/>
          <rect x="14" y="14" width="7" height="7"/>
          <rect x="3" y="14" width="7" height="7"/>
        </svg>
        <span>View All Cases</span>
      </a>
    </div>

    {nextCase ? (
      <a href={`/${lang}/case-studies/${nextCase.slug}`} class="nav-link nav-next">
        <div class="nav-content-inner">
          <span class="nav-label">{t(lang, 'cases.detail.nextCase')}</span>
          <span class="nav-title">{nextCase.title}</span>
        </div>
        <div class="nav-arrow">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </div>
        <div class="nav-glow"></div>
      </a>
    ) : (
      <div class="nav-spacer"></div>
    )}
  </div>
</nav>

<style>
  .enhanced-case-nav {
    margin-top: 80px;
    padding-top: 40px;
  }

  .nav-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-border), transparent);
    margin-bottom: 40px;
  }

  .nav-content {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 24px;
    align-items: center;
  }

  .nav-link {
    position: relative;
    display: flex;
    align-items: center;
    gap: 16px;
    padding: 20px;
    background: var(--color-background-alt);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .nav-link:hover {
    border-color: var(--nav-color);
    transform: translateY(-4px);
    box-shadow: 0 12px 40px -12px var(--nav-color);
  }

  .nav-link:hover .nav-glow {
    opacity: 0.15;
  }

  .nav-link:hover .nav-arrow {
    background: var(--nav-color);
    color: var(--color-background);
  }

  .nav-prev {
    justify-content: flex-start;
  }

  .nav-next {
    justify-content: flex-end;
  }

  .nav-arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    color: var(--nav-color);
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .nav-content-inner {
    display: flex;
    flex-direction: column;
    gap: 6px;
    min-width: 0;
    flex: 1;
  }

  .nav-prev .nav-content-inner {
    align-items: flex-start;
  }

  .nav-next .nav-content-inner {
    align-items: flex-end;
    text-align: right;
  }

  .nav-label {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted);
  }

  .nav-title {
    font-size: 16px;
    font-weight: 700;
    color: var(--color-foreground);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .nav-glow {
    position: absolute;
    inset: -100px;
    background: radial-gradient(circle at center, var(--nav-color) 0%, transparent 70%);
    opacity: 0;
    filter: blur(60px);
    transition: opacity 0.4s ease;
  }

  .nav-spacer {
    min-height: 88px;
  }

  .nav-center {
    display: flex;
    justify-content: center;
  }

  .view-all-link {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 24px;
    background: var(--color-background-alt);
    border: 1px solid var(--color-border);
    border-radius: 24px;
    font-size: 14px;
    font-weight: 600;
    color: var(--color-foreground);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .view-all-link:hover {
    border-color: var(--nav-color);
    color: var(--nav-color);
    transform: scale(1.05);
  }

  @media (max-width: 1024px) {
    .nav-content {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .nav-next {
      order: -1;
    }

    .nav-center {
      order: 1;
    }
prev .nav-content-inner,
    .nav-next .nav-content-inner {
      align-items: flex-start;
      text-align: left
      white-space: normal;
    }
  }

  @media (max-width: 768px) {
    .enhanced-case-nav {
      margin-top: 60px;
    }

    .nav-link {
      padding: 16px;
      gap: 12px;
    }

    .nav-arrow {
      width: 40px;
      height: 40px;
    }

    .nav-title {
      font-size: 14px;
    }

    .nav-spacer {
      display: none;
    }
  }
</style>
