---
import { t } from '@/i18n';
import type { Lang } from '@/i18n/config';

interface Props {
  lang: Lang;
  email: string;
  location: string;
  linkedin: string;
}

const { lang, email, location, linkedin } = Astro.props;

// Contact methods with enhanced properties
const contactMethods = [
  {
    id: 'email',
    icon: 'mail',
    href: `mailto:${email}`,
    label: t(lang, 'contact.email'),
    value: email,
    color: '#10b981',
    colorRgb: '16, 185, 129',
    description: lang === 'es' ? 'Respuesta en 24h' : lang === 'fr' ? 'RÃ©ponse en 24h' : lang === 'pt' ? 'Resposta em 24h' : 'Response within 24h',
    gradient: 'from-emerald-400 via-teal-400 to-cyan-400',
    particles: 80,
    particleSpeed: 1.2
  },
  {
    id: 'linkedin',
    icon: 'linkedin',
    href: linkedin,
    label: 'LinkedIn',
    value: 'Angela Parra',
    color: '#3b82f6',
    colorRgb: '59, 130, 246',
    description: lang === 'es' ? 'Conectemos profesionalmente' : lang === 'fr' ? 'Connectons-nous' : lang === 'pt' ? 'Vamos conectar' : 'Let\'s connect professionally',
    external: true,
    gradient: 'from-blue-400 via-indigo-400 to-purple-400',
    particles: 65,
    particleSpeed: 1.0
  },
  {
    id: 'resume',
    icon: 'document',
    href: `/${lang}/resume`,
    label: t(lang, 'contact.downloadPdf'),
    value: 'CV / Resume',
    color: '#8b5cf6',
    colorRgb: '139, 92, 246',
    description: lang === 'es' ? 'Ver experiencia completa' : lang === 'fr' ? 'Voir expÃ©rience complÃ¨te' : lang === 'pt' ? 'Ver experiÃªncia completa' : 'View full experience',
    gradient: 'from-violet-400 via-purple-400 to-fuchsia-400',
    particles: 50,
    particleSpeed: 0.8
  }
];
---

<section class="section relative overflow-hidden" id="contact">

  <div class="container relative z-10">
    <!-- Header with Glitch Effect -->
    <div class="text-center mb-20 reveal-element opacity-0 translate-y-6 transition-all duration-1000">
      <div class="inline-flex items-center gap-3 px-5 py-2.5 rounded-full bg-gradient-to-r from-emerald-500/10 via-blue-500/10 to-violet-500/10 backdrop-blur-sm border border-emerald-500/20 text-sm font-medium mb-8">
        <span class="relative flex h-3 w-3">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-3 w-3 bg-emerald-400 shadow-lg shadow-emerald-400/50"></span>
        </span>
        <span class="bg-gradient-to-r from-emerald-400 via-blue-400 to-violet-400 bg-clip-text text-transparent font-semibold">
          {lang === 'es' ? 'Disponible para nuevos proyectos' : lang === 'fr' ? 'Disponible pour nouveaux projets' : lang === 'pt' ? 'DisponÃ­vel para novos projetos' : 'Available for new projects'}
        </span>
      </div>

      <h2 class="glitch-text text-5xl md:text-7xl font-bold text-foreground mb-6 relative inline-block" data-text={t(lang, 'contact.title')}>
        {t(lang, 'contact.title')}
      </h2>
      <p class="text-xl text-muted max-w-2xl mx-auto leading-relaxed">
        {t(lang, 'contact.subtitle')}
      </p>
    </div>

    <!-- Contact Cards with 3D Flip & Particle Effects -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto mb-20">
      {contactMethods.map((method, index) => (
        <div 
          class={`contact-card-scene ${index === 1 ? 'reverse-flip' : ''} reveal-element opacity-0 translate-y-6 transition-all duration-1000`}
          style={`transition-delay: ${(index + 1) * 150}ms;`}
          data-card-index={index}
        >
          <div class="contact-card-3d" data-card-id={method.id}>
            <!-- FRONT SIDE -->
            <div class="contact-card-face contact-card-front">
              <a
                href={method.href}
                target={method.external ? '_blank' : undefined}
                rel={method.external ? 'noopener noreferrer' : undefined}
                class="card-link-wrapper block h-full"
              >
                <!-- Canvas for Particles -->
                <canvas 
                  class="particle-canvas absolute inset-0 pointer-events-none rounded-3xl" 
                  data-particle-count={method.particles}
                  data-particle-speed={method.particleSpeed}
                  data-particle-color={method.colorRgb}
                ></canvas>

                <!-- Holographic Border -->
                <div class="holographic-border absolute inset-0 rounded-3xl opacity-0 transition-opacity duration-500"></div>

                <div class="card-content relative p-8 h-full flex flex-col">
                  <!-- Icon with Magnetic Effect -->
                  <div class="magnetic-icon-wrapper mb-8">
                    <div
                      class={`magnetic-icon w-20 h-20 rounded-2xl flex items-center justify-center bg-gradient-to-br ${method.gradient} shadow-2xl relative overflow-hidden`}
                      data-magnetic="true"
                      style={`box-shadow: 0 20px 40px -12px ${method.color}40, 0 8px 16px -8px ${method.color}60;`}
                    >
                      <!-- Icon Glow -->
                      <div class="icon-glow absolute inset-0 rounded-2xl opacity-50 blur-xl" style={`background: ${method.color}`}></div>
                      
                      {method.icon === 'mail' && (
                        <svg class="w-10 h-10 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                      )}
                      {method.icon === 'linkedin' && (
                        <svg class="w-10 h-10 text-white relative z-10" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                        </svg>
                      )}
                      {method.icon === 'document' && (
                        <svg class="w-10 h-10 text-white relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                      )}
                    </div>
                  </div>

                  <!-- Text Content -->
                  <div class="flex-1 flex flex-col justify-between">
                    <div>
                      <h3 class="text-2xl font-bold text-foreground mb-2 transition-colors duration-300">
                        {method.label}
                      </h3>
                      <p class="text-base text-muted/80 mb-6 leading-relaxed">
                        {method.description}
                      </p>
                    </div>

                    <!-- Progress Ring -->
                    <div class="flex items-center justify-between pt-4 border-t border-border/50">
                      <div class="flex items-center gap-2 text-base font-semibold transition-all duration-300" style={`color: ${method.color}`}>
                        <span>{method.external ? (lang === 'es' ? 'Abrir' : lang === 'fr' ? 'Ouvrir' : lang === 'pt' ? 'Abrir' : 'Open') : (lang === 'es' ? 'Enviar' : lang === 'fr' ? 'Envoyer' : lang === 'pt' ? 'Enviar' : 'Send')}</span>
                        <svg class="w-5 h-5 arrow-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                      </div>

                      <!-- Progress Ring SVG -->
                      <svg class="progress-ring" width="52" height="52" viewBox="0 0 52 52">
                        <circle class="progress-ring-bg" cx="26" cy="26" r="22" stroke="currentColor" stroke-width="2.5" fill="none" opacity="0.1" />
                        <circle class="progress-ring-circle" cx="26" cy="26" r="22" stroke={method.color} stroke-width="2.5" fill="none" stroke-linecap="round" transform="rotate(-90 26 26)" />
                      </svg>
                    </div>
                  </div>
                </div>
              </a>
            </div>

            <!-- BACK SIDE -->
            <div class="contact-card-face contact-card-back">
              <div class={`card-back-content h-full flex flex-col items-center justify-center p-8 bg-gradient-to-br ${method.gradient} rounded-3xl relative overflow-hidden`}>
                <!-- Animated Pattern -->
                <div class="absolute inset-0 opacity-20" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 30px 30px;"></div>
                
                <div class="relative z-10 text-center">
                  <div class="text-white/90 text-6xl font-bold mb-4">
                    {method.icon === 'mail' ? 'âœ‰' : method.icon === 'linkedin' ? 'ðŸ‘”' : 'ðŸ“„'}
                  </div>
                  <p class="text-white font-semibold text-lg mb-2">{method.value}</p>
                  <p class="text-white/80 text-sm">{lang === 'es' ? 'Click para continuar' : lang === 'fr' ? 'Cliquez pour continuer' : lang === 'pt' ? 'Clique para continuar' : 'Click to continue'}</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Location Info with Constellation Network -->
    <div class="relative max-w-5xl mx-auto mb-16 reveal-element opacity-0 translate-y-6 transition-all duration-1000" style="transition-delay: 600ms">
      <!-- Constellation Canvas -->
      <canvas id="constellation-canvas" class="absolute inset-0 pointer-events-none rounded-3xl" style="width: 100%; height: 100%;"></canvas>

      <div class="relative p-10 rounded-3xl bg-surface/50 backdrop-blur-xl border border-border/50 overflow-hidden">
        <!-- Animated gradient overlay -->
        <div class="absolute inset-0 bg-gradient-to-br from-emerald-500/5 via-blue-500/5 to-violet-500/5"></div>

        <div class="relative grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Location -->
          <div class="location-item flex flex-col items-center text-center gap-4 p-6 rounded-2xl bg-surface/80 backdrop-blur-sm border border-border/30 hover:border-emerald-500/50 transition-all duration-500 hover:shadow-lg hover:shadow-emerald-500/10 group">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-emerald-400 to-teal-400 flex items-center justify-center shadow-lg shadow-emerald-500/30 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <div>
              <p class="text-xs text-muted mb-1 uppercase tracking-wider font-semibold">{lang === 'es' ? 'UbicaciÃ³n' : lang === 'fr' ? 'Localisation' : lang === 'pt' ? 'LocalizaÃ§Ã£o' : 'Location'}</p>
              <p class="font-bold text-foreground text-lg">{location}</p>
            </div>
          </div>

          <!-- Timezone -->
          <div class="location-item flex flex-col items-center text-center gap-4 p-6 rounded-2xl bg-surface/80 backdrop-blur-sm border border-border/30 hover:border-blue-500/50 transition-all duration-500 hover:shadow-lg hover:shadow-blue-500/10 group">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-blue-400 to-indigo-400 flex items-center justify-center shadow-lg shadow-blue-500/30 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-xs text-muted mb-1 uppercase tracking-wider font-semibold">{lang === 'es' ? 'Zona horaria' : lang === 'fr' ? 'Fuseau horaire' : lang === 'pt' ? 'Fuso horÃ¡rio' : 'Timezone'}</p>
              <p class="font-bold text-foreground text-lg">GMT-5 (COT)</p>
            </div>
          </div>

          <!-- Work preference -->
          <div class="location-item flex flex-col items-center text-center gap-4 p-6 rounded-2xl bg-surface/80 backdrop-blur-sm border border-border/30 hover:border-violet-500/50 transition-all duration-500 hover:shadow-lg hover:shadow-violet-500/10 group">
            <div class="w-16 h-16 rounded-full bg-gradient-to-br from-violet-400 to-purple-400 flex items-center justify-center shadow-lg shadow-violet-500/30 group-hover:scale-110 transition-transform duration-500">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
              </svg>
            </div>
            <div>
              <p class="text-xs text-muted mb-1 uppercase tracking-wider font-semibold">{lang === 'es' ? 'Preferencia' : lang === 'fr' ? 'PrÃ©fÃ©rence' : lang === 'pt' ? 'PreferÃªncia' : 'Preference'}</p>
              <p class="font-bold text-foreground text-lg">{lang === 'es' ? 'Remoto / HÃ­brido' : lang === 'fr' ? 'TÃ©lÃ©travail / Hybride' : lang === 'pt' ? 'Remoto / HÃ­brido' : 'Remote / Hybrid'}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Copy Email with Magnetic Button -->
    <div class="text-center reveal-element opacity-0 translate-y-6 transition-all duration-1000" style="transition-delay: 800ms">
      <button
        id="copy-email-btn"
        data-email={email}
        class="magnetic-button inline-flex items-center gap-4 px-8 py-4 rounded-full bg-gradient-to-r from-emerald-500 via-blue-500 to-violet-500 text-white font-semibold text-lg shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-105 relative overflow-hidden group"
        data-magnetic="true"
      >
        <!-- Shine effect -->
        <div class="shine-effect absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent"></div>

        <svg class="w-6 h-6 relative z-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <span class="font-mono relative z-10">{email}</span>
        <span class="text-sm px-3 py-1 rounded-full bg-white/20 backdrop-blur-sm font-medium relative z-10">
          {t(lang, 'contact.copyEmail')}
        </span>
      </button>
      
      <p id="copy-feedback" class="mt-4 text-lg font-semibold text-emerald-400 opacity-0 transition-opacity duration-300 flex items-center justify-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        {t(lang, 'contact.emailCopied')}
      </p>
    </div>
  </div>
</section>

<style>


  /* ========== GLITCH TEXT EFFECT ========== */
  .glitch-text {
    position: relative;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
  }

  .glitch-text::before {
    animation: glitch-anim-1 4s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite;
    color: #10b981;
    z-index: -1;
  }

  .glitch-text::after {
    animation: glitch-anim-2 4.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite;
    color: #3b82f6;
    z-index: -2;
  }

  @keyframes glitch-anim-1 {
    0%, 96%, 100% {
      opacity: 0;
      transform: translate(0);
    }
    97%, 98% {
      opacity: 0.5;
      transform: translate(-1px, -1px);
    }
  }

  @keyframes glitch-anim-2 {
    0%, 96%, 100% {
      opacity: 0;
      transform: translate(0);
    }
    97.5%, 98.5% {
      opacity: 0.5;
      transform: translate(1px, 1px);
    }
  }

  /* ========== 3D FLIP CARDS ========== */
  .contact-card-scene {
    perspective: 1200px;
    height: 380px;
  }

  .contact-card-3d {
    position: relative;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d;
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .contact-card-scene:hover .contact-card-3d {
    transform: rotateX(180deg);
  }

  .contact-card-scene.reverse-flip:hover .contact-card-3d {
    transform: rotate3d(1, 1, 0, 180deg);
  }

  .contact-card-face {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 1.5rem;
    overflow: hidden;
  }

  .contact-card-front {
    background: hsl(var(--surface));
    border: 1px solid hsl(var(--border) / 0.5);
    box-shadow: 
      0 10px 30px -5px rgba(0, 0, 0, 0.1),
      0 4px 12px -2px rgba(0, 0, 0, 0.05);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .contact-card-scene:hover .contact-card-front {
    box-shadow: 
      0 25px 60px -10px rgba(0, 0, 0, 0.2),
      0 10px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .contact-card-back {
    transform: rotateX(180deg);
    box-shadow: 0 20px 60px -20px rgba(0, 0, 0, 0.5);
  }

  .reverse-flip .contact-card-back {
    transform: rotate3d(1, 1, 0, 180deg);
  }

  .card-link-wrapper {
    position: relative;
    height: 100%;
  }

  .card-content {
    position: relative;
    z-index: 10;
  }

  /* ========== HOLOGRAPHIC BORDER ========== */
  .holographic-border {
    background: linear-gradient(
      90deg,
      rgba(16, 185, 129, 0.8),
      rgba(59, 130, 246, 0.8),
      rgba(139, 92, 246, 0.8),
      rgba(236, 72, 153, 0.8)
    );
    background-size: 300% 300%;
    animation: holographic-flow 3s ease infinite;
    mix-blend-mode: color-dodge;
    filter: blur(2px);
  }

  .contact-card-scene:hover .holographic-border {
    opacity: 1;
  }

  @keyframes holographic-flow {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* ========== MAGNETIC EFFECT ========== */
  .magnetic-icon-wrapper,
  .magnetic-button {
    transition: transform 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  }

  /* ========== PROGRESS RING ========== */
  .progress-ring {
    transform: scale(1);
    transition: transform 0.3s ease;
  }

  .contact-card-scene:hover .progress-ring {
    transform: scale(1.1);
  }

  .progress-ring-circle {
    stroke-dasharray: 138.2;
    stroke-dashoffset: 138.2;
    transition: stroke-dashoffset 1.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .contact-card-scene:hover .progress-ring-circle {
    stroke-dashoffset: 0;
  }

  /* ========== ARROW ANIMATION ========== */
  .arrow-icon {
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .contact-card-scene:hover .arrow-icon {
    transform: translateX(8px) scale(1.2);
  }

  /* ========== SHINE EFFECT ========== */
  .shine-effect {
    transform: translateX(-100%) skewX(-15deg);
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .magnetic-button:hover .shine-effect {
    transform: translateX(200%) skewX(-15deg);
  }

  /* ========== LOCATION ITEMS ANIMATION ========== */
  .location-item {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .location-item:hover {
    transform: translateY(-8px) scale(1.02);
  }

  /* ========== PARTICLE CANVAS ========== */
  .particle-canvas {
    z-index: 1;
    mix-blend-mode: screen;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .contact-card-scene:hover .particle-canvas {
    opacity: 0.6;
  }

  /* ========== ICON GLOW ========== */
  .icon-glow {
    animation: icon-pulse 2s ease-in-out infinite;
  }

  @keyframes icon-pulse {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.6;
      transform: scale(1.05);
    }
  }

  /* ========== REDUCED MOTION ========== */
  @media (prefers-reduced-motion: reduce) {
    .mesh-gradient,
    .glitch-text,
    .glitch-text::before,
    .glitch-text::after,
    .holographic-border,
    .shine-effect,
    .icon-glow {
      animation: none !important;
    }

    .contact-card-3d {
      transition: none;
    }

    .contact-card-scene:hover .contact-card-3d {
      transform: none;
    }

    .particle-canvas,
    #contact-canvas,
    #field-lines,
    #constellation-canvas {
      display: none !important;
    }
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 768px) {
    .contact-card-scene {
      height: auto;
      min-height: 340px;
    }

    .glitch-text {
      font-size: 2.5rem;
    }

    /* Disable 3D flip on mobile for better UX */
    .contact-card-scene:hover .contact-card-3d {
      transform: scale(1.02);
    }

    .contact-card-back {
      display: none;
    }

    .card-content {
      padding: 1.5rem;
    }
  }
</style>

<script>
  // ========== TYPES & INTERFACES ==========
  interface Particle {
    x: number;
    y: number;
    vx: number;
    vy: number;
    size: number;
    alpha: number;
    life: number;
  }

  interface Node {
    x: number;
    y: number;
    vx: number;
    vy: number;
  }

  interface FieldLine {
    path: string;
    offset: number;
  }

  // ========== PARTICLE SYSTEM FOR CARDS ==========
  function initParticleSystem() {
    const canvases = document.querySelectorAll<HTMLCanvasElement>('.particle-canvas');
    
    canvases.forEach((canvas) => {
      const card = canvas.closest('.contact-card-scene');
      if (!card) return;

      const ctx = canvas.getContext('2d');
      if (!ctx) return;

      // Set canvas size
      const rect = canvas.getBoundingClientRect();
      canvas.width = rect.width;
      canvas.height = rect.height;

      const particleCount = parseInt(canvas.dataset.particleCount || '50', 10);
      const particleSpeed = parseFloat(canvas.dataset.particleSpeed || '1', 10);
      const colorRgb = canvas.dataset.particleColor || '16, 185, 129';
      
      let particles: Particle[] = [];
      let animationId: number;
      let isHovering = false;

      // Create particles
      function createParticles() {
        particles = [];
        for (let i = 0; i < particleCount; i++) {
          particles.push({
            x: Math.random() * canvas.width,
            y: Math.random() * canvas.height,
            vx: (Math.random() - 0.5) * particleSpeed,
            vy: (Math.random() - 0.5) * particleSpeed,
            size: Math.random() * 2 + 1,
            alpha: Math.random() * 0.5 + 0.3,
            life: Math.random() * 100
          });
        }
      }

      // Animate particles
      function animateParticles() {
        if (!isHovering) return;

        ctx.clearRect(0, 0, canvas.width, canvas.height);

        particles.forEach((particle, i) => {
          particle.x += particle.vx;
          particle.y += particle.vy;
          particle.life += 1;

          // Wrap around edges
          if (particle.x < 0) particle.x = canvas.width;
          if (particle.x > canvas.width) particle.x = 0;
          if (particle.y < 0) particle.y = canvas.height;
          if (particle.y > canvas.height) particle.y = 0;

          // Pulsing alpha
          particle.alpha = 0.3 + Math.sin(particle.life * 0.05) * 0.3;

          // Draw particle
          ctx.beginPath();
          ctx.arc(particle.x, particle.y, particle.size, 0, Math.PI * 2);
          ctx.fillStyle = `rgba(${colorRgb}, ${particle.alpha})`;
          ctx.fill();

          // Connect nearby particles
          for (let j = i + 1; j < particles.length; j++) {
            const p2 = particles[j];
            const dx = particle.x - p2.x;
            const dy = particle.y - p2.y;
            const dist = Math.sqrt(dx * dx + dy * dy);

            if (dist < 100) {
              ctx.beginPath();
              ctx.moveTo(particle.x, particle.y);
              ctx.lineTo(p2.x, p2.y);
              ctx.strokeStyle = `rgba(${colorRgb}, ${0.1 * (1 - dist / 100)})`;
              ctx.lineWidth = 1;
              ctx.stroke();
            }
          }
        });

        animationId = requestAnimationFrame(animateParticles);
      }

      // Event listeners
      card.addEventListener('mouseenter', () => {
        isHovering = true;
        createParticles();
        animateParticles();
      });

      card.addEventListener('mouseleave', () => {
        isHovering = false;
        cancelAnimationFrame(animationId);
        ctx.clearRect(0, 0, canvas.width, canvas.height);
      });
    });
  }

  // ========== CONSTELLATION NETWORK ==========
  function initConstellationNetwork() {
    const canvas = document.getElementById('constellation-canvas') as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    const parent = canvas.parentElement;
    if (!parent) return;

    const rect = parent.getBoundingClientRect();
    canvas.width = rect.width;
    canvas.height = rect.height;

    const nodeCount = 30;
    const nodes: Node[] = [];
    let mouseX = canvas.width / 2;
    let mouseY = canvas.height / 2;

    // Create nodes
    for (let i = 0; i < nodeCount; i++) {
      nodes.push({
        x: Math.random() * canvas.width,
        y: Math.random() * canvas.height,
        vx: (Math.random() - 0.5) * 0.5,
        vy: (Math.random() - 0.5) * 0.5
      });
    }

    // Animation loop
    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      nodes.forEach((node) => {
        // Move nodes
        node.x += node.vx;
        node.y += node.vy;

        // Bounce off edges
        if (node.x < 0 || node.x > canvas.width) node.vx *= -1;
        if (node.y < 0 || node.y > canvas.height) node.vy *= -1;

        // Mouse attraction
        const dx = mouseX - node.x;
        const dy = mouseY - node.y;
        const dist = Math.sqrt(dx * dx + dy * dy);
        if (dist < 150) {
          node.vx += dx * 0.0001;
          node.vy += dy * 0.0001;
        }

        // Draw node
        ctx.beginPath();
        ctx.arc(node.x, node.y, 2, 0, Math.PI * 2);
        ctx.fillStyle = 'rgba(59, 130, 246, 0.6)';
        ctx.fill();
      });

      // Connect nodes
      for (let i = 0; i < nodes.length; i++) {
        for (let j = i + 1; j < nodes.length; j++) {
          const dx = nodes[i].x - nodes[j].x;
          const dy = nodes[i].y - nodes[j].y;
          const dist = Math.sqrt(dx * dx + dy * dy);

          if (dist < 120) {
            ctx.beginPath();
            ctx.moveTo(nodes[i].x, nodes[i].y);
            ctx.lineTo(nodes[j].x, nodes[j].y);
            ctx.strokeStyle = `rgba(59, 130, 246, ${0.2 * (1 - dist / 120)})`;
            ctx.lineWidth = 1;
            ctx.stroke();
          }
        }
      }

      requestAnimationFrame(animate);
    }

    // Mouse move tracking
    parent.addEventListener('mousemove', (e) => {
      const rect = canvas.getBoundingClientRect();
      mouseX = e.clientX - rect.left;
      mouseY = e.clientY - rect.top;
    });

    animate();
  }

  // ========== GENERATIVE CANVAS BACKGROUND ==========
  function initGenerativeBackground() {
    const canvas = document.getElementById('contact-canvas') as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    canvas.width = window.innerWidth;
    canvas.height = document.getElementById('contact')?.offsetHeight || window.innerHeight;

    let time = 0;

    function drawGenerativeArt() {
      ctx.fillStyle = 'rgba(0, 0, 0, 0.02)';
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      time += 0.005;

      // Draw flowing lines
      for (let i = 0; i < 5; i++) {
        ctx.beginPath();
        for (let x = 0; x < canvas.width; x += 10) {
          const y = canvas.height / 2 + Math.sin(x * 0.01 + time + i) * 50 + Math.cos(x * 0.005 - time) * 30;
          if (x === 0) {
            ctx.moveTo(x, y);
          } else {
            ctx.lineTo(x, y);
          }
        }
        const gradient = ctx.createLinearGradient(0, 0, canvas.width, 0);
        gradient.addColorStop(0, 'rgba(16, 185, 129, 0.05)');
        gradient.addColorStop(0.5, 'rgba(59, 130, 246, 0.05)');
        gradient.addColorStop(1, 'rgba(139, 92, 246, 0.05)');
        ctx.strokeStyle = gradient;
        ctx.lineWidth = 2;
        ctx.stroke();
      }

      requestAnimationFrame(drawGenerativeArt);
    }

    drawGenerativeArt();

    // Resize handler
    window.addEventListener('resize', () => {
      canvas.width = window.innerWidth;
      canvas.height = document.getElementById('contact')?.offsetHeight || window.innerHeight;
    });
  }

  // ========== MAGNETIC FIELD LINES ==========
  function initFieldLines() {
    const svg = document.getElementById('field-lines');
    if (!svg) return;

    const lines: FieldLine[] = [];
    const lineCount = 15;

    for (let i = 0; i < lineCount; i++) {
      const startX = Math.random() * 100;
      const startY = Math.random() * 100;
      const endX = Math.random() * 100;
      const endY = Math.random() * 100;
      const cpX = Math.random() * 100;
      const cpY = Math.random() * 100;

      const path = `M ${startX} ${startY} Q ${cpX} ${cpY} ${endX} ${endY}`;
      const gradientId = i % 2 === 0 ? 'line-gradient-1' : 'line-gradient-2';

      const pathEl = document.createElementNS('http://www.w3.org/2000/svg', 'path');
      pathEl.setAttribute('d', path);
      pathEl.setAttribute('stroke', `url(#${gradientId})`);
      pathEl.setAttribute('stroke-width', '2');
      pathEl.setAttribute('fill', 'none');
      pathEl.setAttribute('opacity', '0.3');

      // Animate stroke-dasharray
      const length = pathEl.getTotalLength();
      pathEl.style.strokeDasharray = `${length}`;
      pathEl.style.strokeDashoffset = `${length}`;
      pathEl.style.animation = `draw-line ${3 + Math.random() * 2}s ease-in-out infinite`;
      pathEl.style.animationDelay = `${Math.random() * 2}s`;

      svg.appendChild(pathEl);
      lines.push({ path, offset: 0 });
    }

    // Add animation keyframes
    const style = document.createElement('style');
    style.textContent = `
      @keyframes draw-line {
        0%, 100% {
          stroke-dashoffset: var(--length);
        }
        50% {
          stroke-dashoffset: 0;
        }
      }
    `;
    document.head.appendChild(style);
  }

  // ========== MAGNETIC EFFECT ==========
  function initMagneticEffect() {
    const magneticElements = document.querySelectorAll<HTMLElement>('[data-magnetic="true"]');

    magneticElements.forEach((el) => {
      let boundingRect: DOMRect;

      el.addEventListener('mouseenter', () => {
        boundingRect = el.getBoundingClientRect();
      });

      el.addEventListener('mousemove', (e) => {
        const mouseX = e.clientX;
        const mouseY = e.clientY;
        const centerX = boundingRect.left + boundingRect.width / 2;
        const centerY = boundingRect.top + boundingRect.height / 2;

        const deltaX = (mouseX - centerX) * 0.3;
        const deltaY = (mouseY - centerY) * 0.3;

        el.style.transform = `translate(${deltaX}px, ${deltaY}px)`;
      });

      el.addEventListener('mouseleave', () => {
        el.style.transform = 'translate(0, 0)';
      });
    });
  }

  // ========== COPY EMAIL FUNCTIONALITY ==========
  function initCopyEmail() {
    const copyBtn = document.getElementById('copy-email-btn');
    const feedback = document.getElementById('copy-feedback');
    
    if (!copyBtn || !feedback) return;

    copyBtn.addEventListener('click', async () => {
      const email = copyBtn.dataset.email;
      if (!email) return;

      try {
        await navigator.clipboard.writeText(email);
        feedback.style.opacity = '1';
        setTimeout(() => {
          feedback.style.opacity = '0';
        }, 3000);
      } catch (err) {
        console.error('Failed to copy email:', err);
      }
    });
  }

  // ========== REVEAL ANIMATIONS ==========
  function initRevealAnimations() {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.remove('opacity-0', 'translate-y-6');
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.1 }
    );

    document.querySelectorAll('.reveal-element').forEach((el) => {
      observer.observe(el);
    });
  }

  // ========== INITIALIZATION ==========
  function initContactEffects() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    
    if (!prefersReducedMotion) {
      initParticleSystem();
      initConstellationNetwork();
      initMagneticEffect();
    }
    
    initRevealAnimations();
    initCopyEmail();
  }

  // Run on load
  if (typeof document !== 'undefined') {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initContactEffects);
    } else {
      initContactEffects();
    }

    // Reinitialize after view transitions
    document.addEventListener('astro:page-load', initContactEffects);
  }
</script>
