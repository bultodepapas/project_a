---
import { t } from '@/i18n';
import type { Lang } from '@/i18n/config';

interface Props {
  lang: Lang;
  items: Array<{
    id: string;
    year: string;
    icon?: string;
    color?: string;
    title: { [key: string]: string } | string;
    org: { [key: string]: string } | string;
    description: { [key: string]: string } | string;
    highlights?: { [key: string]: string[] } | string[];
  }>;
}

const { lang, items } = Astro.props;

// Helper to get localized string
const getStr = (obj: any) => (typeof obj === 'string' ? obj : obj[lang]);
const getArr = (obj: any) => (Array.isArray(obj) ? obj : obj?.[lang] || []);

// Default colors for awards
const defaultColors = ['#6ee7b7', '#93c5fd', '#c4b5fd', '#fcd34d'];
---

<section class="section relative overflow-hidden" id="awards">
  <!-- Animated background -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <!-- Floating shapes -->
    <div class="floating-shape absolute top-20 left-[10%] w-64 h-64 rounded-full bg-gradient-to-br from-emerald-500/10 to-transparent blur-3xl"></div>
    <div class="floating-shape absolute bottom-20 right-[10%] w-80 h-80 rounded-full bg-gradient-to-br from-blue-500/10 to-transparent blur-3xl" style="animation-delay: -2s"></div>
    <div class="floating-shape absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-96 rounded-full bg-gradient-to-br from-violet-500/5 to-transparent blur-3xl" style="animation-delay: -4s"></div>

    <!-- Sparkle particles -->
    <div class="sparkles absolute inset-0">
    {Array.from({ length: 20 }).map(() => (
        <div
          class="sparkle absolute w-1 h-1 rounded-full bg-accent/40"
          style={`left: ${Math.random() * 100}%; top: ${Math.random() * 100}%; animation-delay: ${Math.random() * 5}s;`}
        />
      ))}
    </div>
  </div>

  <div class="container relative z-10">
    <!-- Header with trophy icon -->
    <div class="text-center mb-7 md:mb-9 reveal-element opacity-0 translate-y-6 transition-all duration-1000">
      <!-- Trophy icon animated -->
      <div class="inline-flex items-center justify-center w-14 h-14 md:w-16 md:h-16 rounded-3xl bg-gradient-to-br from-amber-200/30 to-amber-400/20 mb-3 trophy-container">
        <svg class="w-10 h-10 text-amber-500 trophy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
        </svg>
      </div>

      <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-2">
        {t(lang, 'awards.title')}
      </h2>
      <p class="text-base md:text-lg text-muted max-w-2xl mx-auto">
        {lang === 'es' ? 'Reconocimientos por contribuciones al campo de datos e impacto' :
         lang === 'fr' ? 'Reconnaissances pour contributions au domaine des données et de l\'impact' :
         lang === 'pt' ? 'Reconhecimentos por contribuições ao campo de dados e impacto' :
         'Recognized contributions to the field of data and impact measurement'}
      </p>

      <!-- Decorative line with stars -->
      <div class="flex items-center justify-center gap-3 mt-3">
        <div class="h-px w-20 bg-gradient-to-r from-transparent to-amber-400/50"></div>
        <div class="flex gap-1">
          <span class="text-amber-400 animate-pulse" style="animation-delay: 0s">★</span>
          <span class="text-amber-400 animate-pulse" style="animation-delay: 0.2s">★</span>
          <span class="text-amber-400 animate-pulse" style="animation-delay: 0.4s">★</span>
        </div>
        <div class="h-px w-20 bg-gradient-to-l from-transparent to-amber-400/50"></div>
      </div>
    </div>

    <!-- Awards Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {items.map((award, index) => {
        const color = award.color || defaultColors[index % defaultColors.length];
        const highlights = getArr(award.highlights);

        return (
          <div
            class="award-card group relative reveal-element opacity-0 translate-y-6 transition-all duration-1000"
            style={`transition-delay: ${(index + 1) * 200}ms`}
          >
            <!-- Glowing border effect -->
            <div
              class="absolute -inset-[1px] rounded-3xl opacity-0 group-hover:opacity-100 transition-opacity duration-700 blur-sm"
              style={`background: linear-gradient(135deg, ${color}, transparent 50%, ${color}50)`}
            ></div>

            <!-- Card content -->
            <div class="relative p-7 md:p-8 rounded-3xl bg-surface border border-border group-hover:border-transparent transition-all duration-500 overflow-hidden h-full">
              <!-- Background decoration -->
              <div
                class="absolute top-0 right-0 w-64 h-64 opacity-5 group-hover:opacity-10 transition-opacity duration-500"
                style={`background: radial-gradient(circle at top right, ${color}, transparent 70%)`}
              ></div>

              <!-- Year badge with ribbon effect -->
              <div class="relative mb-5">
                <div
                  class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-bold text-white shadow-lg"
                  style={`background: linear-gradient(135deg, ${color}, ${color}cc)`}
                >
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  {award.year}
                </div>

                <!-- Shine effect on badge -->
                <div class="absolute inset-0 overflow-hidden rounded-full opacity-0 group-hover:opacity-100">
                  <div class="shine-effect absolute inset-0"></div>
                </div>
              </div>

              <!-- Icon with animated ring -->
              <div class="relative w-16 h-16 md:w-20 md:h-20 mb-5">
                <!-- Rotating ring -->
                <div
                  class="absolute inset-0 rounded-2xl rotating-ring opacity-0 group-hover:opacity-100 transition-opacity duration-500"
                  style={`border: 2px dashed ${color}40`}
                ></div>

                <!-- Icon container -->
                <div
                  class="absolute inset-1 rounded-xl flex items-center justify-center transition-all duration-500 group-hover:scale-110"
                  style={`background: linear-gradient(135deg, ${color}25, ${color}10)`}
                >
                  {award.icon === 'chart' && (
                    <svg class="w-9 h-9 transition-colors duration-300" style={`color: ${color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                  )}
                  {award.icon === 'globe' && (
                    <svg class="w-9 h-9 transition-colors duration-300" style={`color: ${color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                  {!award.icon && (
                    <svg class="w-9 h-9 transition-colors duration-300" style={`color: ${color}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
                    </svg>
                  )}
                </div>
              </div>

              <!-- Title -->
              <h3 class="text-2xl font-bold text-foreground mb-2 group-hover:text-accent transition-colors duration-300">
                {getStr(award.title)}
              </h3>

              <!-- Organization -->
              <p class="text-base font-medium mb-3" style={`color: ${color}`}>
                {getStr(award.org)}
              </p>

              <!-- Description -->
              <p class="text-muted leading-relaxed mb-5">
                {getStr(award.description)}
              </p>

              <!-- Highlights tags -->
              {highlights.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {highlights.map((highlight: string, hIndex: number) => (
                    <span
                      class="inline-flex items-center gap-1 px-3 py-1.5 rounded-full text-xs font-medium bg-surface border border-border transition-all duration-300 group-hover:border-transparent"
                      style={`--delay: ${hIndex * 100}ms`}
                    >
                      <svg class="w-3 h-3" style={`color: ${color}`} fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-foreground/80">{highlight}</span>
                    </span>
                  ))}
                </div>
              )}

              <!-- Decorative corner accent -->
              <div
                class="absolute bottom-0 left-0 w-32 h-32 opacity-0 group-hover:opacity-10 transition-opacity duration-500"
                style={`background: radial-gradient(circle at bottom left, ${color}, transparent 70%)`}
              ></div>
            </div>
          </div>
        );
      })}
    </div>

    <!-- Bottom quote/callout -->
    <div class="mt-8 md:mt-10 text-center reveal-element opacity-0 translate-y-6 transition-all duration-1000" style="transition-delay: 600ms">
      <div class="inline-flex items-center gap-3 px-5 py-3 rounded-2xl bg-gradient-to-r from-surface to-background border border-border">
        <div class="flex -space-x-1">
          <div class="w-8 h-8 rounded-full bg-gradient-to-br from-emerald-200 to-emerald-400 flex items-center justify-center text-xs font-bold text-emerald-800">E</div>
          <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-200 to-blue-400 flex items-center justify-center text-xs font-bold text-blue-800">I</div>
        </div>
        <span class="text-sm text-muted">
          {lang === 'es' ? 'Contribuciones reconocidas por organizaciones líderes en clima e impacto' :
           lang === 'fr' ? 'Contributions reconnues par des organisations leaders en climat et impact' :
           lang === 'pt' ? 'Contribuições reconhecidas por organizações líderes em clima e impacto' :
           'Contributions recognized by leading climate and impact organizations'}
        </span>
      </div>
    </div>
  </div>
</section>

<style>
  /* Floating background animation */
  .floating-shape {
    animation: float-bg 8s ease-in-out infinite;
  }

  @keyframes float-bg {
    0%, 100% { transform: translate(0, 0) scale(1); }
    25% { transform: translate(20px, -20px) scale(1.05); }
    50% { transform: translate(0, 20px) scale(1); }
    75% { transform: translate(-20px, -10px) scale(0.95); }
  }

  /* Sparkle animation */
  .sparkle {
    animation: sparkle 4s ease-in-out infinite;
  }

  @keyframes sparkle {
    0%, 100% { opacity: 0; transform: scale(0); }
    50% { opacity: 1; transform: scale(1); }
  }

  /* Trophy bounce */
  .trophy-container:hover .trophy-icon {
    animation: trophy-bounce 0.6s ease-in-out;
  }

  @keyframes trophy-bounce {
    0%, 100% { transform: translateY(0) rotate(0); }
    25% { transform: translateY(-8px) rotate(-5deg); }
    50% { transform: translateY(0) rotate(5deg); }
    75% { transform: translateY(-4px) rotate(-2deg); }
  }

  /* Card hover lift */
  .award-card:hover {
    transform: translateY(-8px);
  }

  /* Rotating ring */
  .rotating-ring {
    animation: rotate-ring 10s linear infinite;
  }

  @keyframes rotate-ring {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Shine effect */
  .shine-effect {
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.4),
      transparent
    );
    animation: shine 2s ease-in-out infinite;
  }

  @keyframes shine {
    0% { transform: translateX(-100%); }
    50%, 100% { transform: translateX(100%); }
  }

  /* Stars pulse with different timings */
  .animate-pulse {
    animation: pulse-star 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse-star {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.5; transform: scale(0.8); }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .floating-shape,
    .sparkle,
    .rotating-ring,
    .shine-effect {
      animation: none;
    }
    .award-card:hover {
      transform: none;
    }
    .trophy-container:hover .trophy-icon {
      animation: none;
    }
  }
</style>
